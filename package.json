{
  "name": "sir-hires",
  "version": "0.2.0",
  "type": "module",
  "description": "Privacy-first job search assistant - Chrome extension",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint chrome-extension/**/*.js",
    "lint:fix": "eslint chrome-extension/**/*.js --fix",
    "format": "prettier --write \"chrome-extension/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"chrome-extension/**/*.{js,html,css}\""
  },
  "keywords": [
    "chrome-extension",
    "job-search",
    "privacy-first",
    "local-storage"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2"
  }
}
