{
  "name": "sir-hires",
  "version": "0.2.0",
  "description": "Privacy-first job search assistant - Chrome extension for job tracking and application management",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint chrome-extension/**/*.js",
    "lint:fix": "eslint chrome-extension/**/*.js --fix",
    "format": "prettier --write \"chrome-extension/**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"chrome-extension/**/*.{js,html,css,json}\"",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chriskevini/sir-hires.git"
  },
  "keywords": [
    "chrome-extension",
    "job-search",
    "privacy",
    "local-first",
    "application-tracking"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chriskevini/sir-hires/issues"
  },
  "homepage": "https://github.com/chriskevini/sir-hires#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-jest": "^28.9.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "chrome-extension/**/*.js",
      "!chrome-extension/test-*.js",
      "!chrome-extension/**/node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test-"
    ],
    "moduleFileExtensions": ["js", "json"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/chrome-extension/test-"
    ],
    "transform": {}
  }
}
